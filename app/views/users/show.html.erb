<div class="container">
  <h1 class="text-center mt-5 mb-5"><%= @user.first_name %></h1>
  <div class="row">
    <div class="col-md-4">
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title"><%= @user.first_name %> <%= @user.last_name %></h5>
          <p class="card-text"><%= @user.description %></p>
          <p class="card-text"><strong>Email :</strong> <%= @user.email %></p>
          <p class="card-text"><strong>Inscrit depuis :</strong> <%= @user.created_at.to_date %></p>
        </div>

        <div class="card-body">
            <h2>Mes événements</h2>
                <ul>
                <% @events.each do |event| %>
                    <li><%= link_to event.title, event %></li>
                <% end %>
                </ul>
        </div>
        <%= link_to "Éditer mes informations", edit_user_path(@user), class: 'btn btn-secondary' if current_user == @user %>        
      </div>
    </div>
  </div>
</div>
